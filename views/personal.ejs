									<p class="logout"><a href="/logout">登出</a></p>
								</div>
							</nav>
					</div>
				</div>


			<!-- Main -->
				<div id="main-wrapper">
					<div id="main" class="container">
						<div class="row">

							<!-- Sidebar -->
								<div id="sidebar" class="4u 12u(mobile)">

									<!-- Excerpts -->
										<section>
											<ul class="divided">
                                            
												<li>
													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<p class="photo"><a href="/personal0 %>"><img src="<%= "images/" +avatar %>" width="120" height="120"></a></p>

																<h3><a href="/personal0 %>"><%= nickName %></a></h3>
                                                                <p class="persign"><%= sign %></p>
                                                                <!--<span class="level">Lv.20</span>-->
																<a href="\personal2" class="button">編輯個資</a>
															</header>
                                                            <p class="clear"></p>
														</article>
												</li>
                                                
												
												<li>
                                                
                                                <!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<h4>動態消息</h4>
															</header>
																<ul>
															<% for(var i=0; i<messengeData.length; i++){ %>
																<li>
																	<p class="photo"><img src="<%= "images/" + messengeData[i].avatar %>" width="50" height="50"></p>
																	<p class="persign1"><strong><%= messengeData[i].nickName %></strong>回覆了你&nbsp;<strong><%= messengeData[i].noteTitle %></strong>&nbsp;的筆記</p>
																</li>
															 <% } %>	
																
															</ul>
																
																
														</article>

												</li>
												<li>

													

													<!-- Excerpt -->
														<article class="box excerpt">
															<header>
																<h4>好書推薦</h4>
															</header>
															<ul>
																<li>
																	<section>
																		<p class="picBook">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src = "<%= booksData[0].picture %>" width="180" height="200"/></p>
																	</section>
																	<article>
																		<h2><%= booksData[0].bookName %></h2>
																		<p><%= booksData[0].content %></p>
																		<!--<a href="/discuss3" class="button">前往...</a>-->
																	</article>
																</li>
																</ul>
														</article>

												</li>
											</ul>
										</section>
								</div>
                                
                                
            <!-- Content -->
         <div id="content" class="8u 12u(mobile) important(mobile)">
            <!-- main -->
                             
            <div id="collectionLarge">
				<p class="title">新增文章</p>
			<form onsubmit="return confirm('是否確定新增?');" role="form" method="get" enctype="multipart/form-data" action="/noteAdd">
             <div class="row">
            <div class="col-md-12">
               
                    <div class="form-group">                     
                        <label>圖書名稱&nbsp;&nbsp;&nbsp;（把書加入收藏就能寫筆記囉～）</label>  
                        <select class="form-control"  id="bookNo"  name="bookNo" >
						<!--<option value="">把書加入收藏就能寫筆記囉~</option>-->
							<% for(var i=0; i<collectionData.length; i++){ %>  
			             
                                <option value="<%= collectionData[i].bookNo %>"><%= (collectionData[i].bookName + " " + collectionData[i].author) %></option>                                
                            <% } %>                                                         
                        </select>                 
                    </div>
					
					<div class="form-group">                     
                        <label>標題</label>
                        <input type="text" class="form-control" name="noteTitle">
                    </div>
                    
                    <div class="form-group">                     
                        <label>撰寫文章</label>
                                <div id="editor">
										
											
											<textarea name="noteContent" cols="50" rows="5"> </textarea>
										
										
                                </div>
					</div>
					<body onload="ShowTime()">
						<form id="form1" runat="server">
							<input type="hidden" value = "showbox" name="date">
						</form>
					</body>
					 
					<br><br>
					<button type="submit" class="btn btn-default">
                        新增
                    </button>

                    
                </form>                
            </div>
           </div>    
          </div>
        </div>                        
	</div>                      
			
		</div>

