			function isEmail(strEmail) {
				if (strEmail.search(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/) != -1){
					document.getElementById("tooltip").style.color = "green";
					return document.getElementById("tooltip").innerHTML = "格式正確&check;";
					
				}else{
					document.getElementById("tooltip").style.color = "red";
					return document.getElementById("tooltip").innerHTML = "請輸入正確E-mail格式";
				}
			}
						
			//password input value check
			function check(){ 
